<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basicBackgroundColor"
                android:orientation="horizontal"
                android:padding="8dp"
    >

    <TextView
        android:id="@+id/textView_section_number_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/background_section_icon"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/textColorSecondary"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:text="@string/done"
        android:id="@+id/textView_section_done_icon"
        android:textSize="12sp"
        android:textColor="@color/textColorSecondary"
        android:layout_alignRight="@+id/textView_section_number_icon"
        android:layout_alignBottom="@+id/textView_section_number_icon"
        android:background="@drawable/background_done_icon"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView_section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="기본 개념 정의 및 이해"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/textView_section_number_icon"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/ic_next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>