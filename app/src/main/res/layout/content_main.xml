<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.skku.se.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_learning_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/learning_list_title"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView_learning_list_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray">
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout_learning_chapter_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView_learning_list_title"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="16dp">

            <!--<RelativeLayout
                android:id="@+id/relativeLayout_file_input_output"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/basicBackgroundColor"
                android:clickable="true"
                android:padding="16dp">

                <com.github.lzyzsd.circleprogress.CircleProgress
                    android:id="@+id/circle_progress_file_input_output"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:circle_finished_color="@color/colorAccent"
                    app:circle_progress="20"/>

                <TextView
                    android:id="@+id/textView_file_input_output_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/circle_progress_file_input_output"
                    android:password="false"
                    android:text="파일 입/출력"
                    android:textColor="@color/textColorFourth"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textView_file_input_output_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView_file_input_output_title"
                    android:layout_below="@+id/textView_file_input_output_title"
                    android:text="파일 입력까지 진행"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/imageView_file_input_output_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_next"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/button_continue_file_input_output"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/circle_progress_file_input_output"
                    android:background="@drawable/ripple_button_click_feedback"
                    android:longClickable="true"
                    android:text="@string/continue_learning"
                    android:textColor="@color/textColorFourth"/>

                <Button
                    android:id="@+id/button_see_sections_file_input_output"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/button_continue_file_input_output"
                    android:layout_marginLeft="8dp"
                    android:layout_toEndOf="@+id/button_continue_file_input_output"
                    android:layout_toRightOf="@+id/button_continue_file_input_output"
                    android:background="@drawable/ripple_button_click_feedback"
                    android:text="@string/see_sections"
                    android:textColor="@color/textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="beginner"
                    android:id="@+id/textView_learning_level_file_input_output"
                    android:layout_toRightOf="@+id/textView_file_input_output_title"
                    android:layout_toEndOf="@+id/textView_file_input_output_title"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/textColorSecondary"
                    android:background="@drawable/background_beginner_level_icon"
                    android:padding="4dp"
                    android:layout_alignBottom="@+id/textView_file_input_output_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_configure_learning_level_file_input_output"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:clickable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_structure"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:background="@color/basicBackgroundColor"
                android:clickable="true"
                android:padding="16dp">

                <com.github.lzyzsd.circleprogress.CircleProgress
                    android:id="@+id/circle_progress_structure"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:circle_finished_color="@color/colorAccent"
                    app:circle_progress="80"/>

                <TextView
                    android:id="@+id/textView_structure_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/circle_progress_structure"
                    android:password="false"
                    android:text="구조체"
                    android:textColor="@color/textColorFourth"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textView_structure_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView_structure_title"
                    android:layout_below="@+id/textView_structure_title"
                    android:text="구조체 포인터까지 진행"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/button_continue_structure"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/circle_progress_structure"
                    android:background="@drawable/ripple_button_click_feedback"
                    android:text="@string/continue_learning"
                    android:textColor="@color/textColorFourth"/>

                <Button
                    android:id="@+id/button_see_sections_structure"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/button_continue_structure"
                    android:layout_marginLeft="8dp"
                    android:layout_toEndOf="@+id/button_continue_structure"
                    android:layout_toRightOf="@+id/button_continue_structure"
                    android:background="@drawable/ripple_button_click_feedback"
                    android:text="@string/see_sections"
                    android:textColor="@color/textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="beginner"
                    android:id="@+id/textView_learning_level_structure"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/textView_structure_title"
                    android:layout_toEndOf="@id/textView_structure_title"
                    android:textColor="@color/textColorSecondary"
                    android:background="@drawable/background_beginner_level_icon"
                    android:padding="4dp"
                    android:layout_alignBottom="@+id/textView_structure_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_configure_learning_level_structure"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:clickable="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_compile_flow"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:background="@color/basicBackgroundColor"
                android:clickable="true"
                android:padding="16dp">

                <com.github.lzyzsd.circleprogress.CircleProgress
                    android:id="@+id/circle_progress_compile_flow"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:circle_finished_color="@color/colorAccent"
                    app:circle_progress="50"/>

                <TextView
                    android:id="@+id/textView_compile_flow_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/circle_progress_compile_flow"
                    android:password="false"
                    android:text="컴파일 과정"
                    android:textColor="@color/textColorFourth"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView_compile_flow_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView_compile_flow_title"
                    android:layout_below="@+id/textView_compile_flow_title"
                    android:text="링크까지 진행"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/button_continue_compile_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/circle_progress_compile_flow"
                    android:background="@drawable/ripple_button_click_feedback"
                    android:text="@string/continue_learning"
                    android:textColor="@color/textColorFourth"/>

                <Button
                    android:id="@+id/button_see_sections_compile_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/button_continue_compile_flow"
                    android:layout_marginLeft="8dp"
                    android:layout_toEndOf="@+id/button_continue_compile_flow"
                    android:layout_toRightOf="@+id/button_continue_compile_flow"
                    android:background="@drawable/ripple_button_click_feedback"
                    android:text="@string/see_sections"
                    android:textColor="@color/textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="beginner"
                    android:id="@+id/textView_learning_level_compile_flow"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/textView_compile_flow_title"
                    android:layout_toEndOf="@id/textView_compile_flow_title"
                    android:textColor="@color/textColorSecondary"
                    android:background="@drawable/background_beginner_level_icon"
                    android:padding="4dp"
                    android:layout_alignBottom="@+id/textView_compile_flow_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_configure_learning_level_compile_flow"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:clickable="true"/>

            </RelativeLayout>-->

        </LinearLayout>

        <TextView
            android:id="@+id/textView_recent_q_and_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_learning_chapter_list"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/recent_q_and_as"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView_recent_q_and_a"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/linearLayout_qna"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView_recent_q_and_a"
            android:orientation="vertical"
            android:padding="16dp">

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
